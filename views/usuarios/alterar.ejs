<div class="container">
    <h1>Alterar Usu√°rios</h1>
    <div>
        <% if (typeof msg != "undefined") { %>             
            <span  ><%= msg %></span>
        <% } %>
    </div>
    <div>
        <div>
            <div>
                <div class="form-group">
                    <label for="usuarioEmail" class="form-label">Email</label>
                    <input type="text" class="form-control" id="usuarioEmail" name="usuarioEmail" value="<%= user.usuarioEmail  %>">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="usuarioSenha" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="usuarioSenha" name="usuarioSenha" value="<%= user.usuarioSenha %>">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="usuarioNome" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="usuarioNome" name="usuarioNome" value="<%= user.usuarioNome %>">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="usuarioPerfil" class="form-label">Tipo:</label>
                    <select class="form-control" id="usuarioPerfil" name="usuarioPerfil">
                        <option >Selecione...</option>
                        <option <%= user.perfilId == 1 && 'selected' %> value="1">Administrador</option>
                        <option <%= user.perfilId == 2 && 'selected' %> value="2">Visitante</option>
                        <option <%= user.perfilId == 3 && 'selected' %> value="3">Normal</option>
                    </select>
                </div>
            </div>
            <div>
                <div class="form-check">
                    <% if (user.usuarioAtivo == 1){ %>
                    <input checked class="form-check-input" type="checkbox" id="usuarioAtivo" name="usuarioAtivo">
                    <%} else { %>
                        <input class="form-check-input" type="checkbox" id="usuarioAtivo" name="usuarioAtivo">
                    <% } %>
                    <label class="form-check-label" for="usuarioAtivo">
                        Ativo
                    </label>
                </div>
            </div>
            <div>
                <button class="btn btn-primary" id="btnCadastrar" type="button">Editar</button>
                <a class="btn btn-secondary" href="/usuarios">Voltar</a>
            </div>
        </div>
    </div>
</div>
<script src="/js/usuarios/alterar.js"></script>