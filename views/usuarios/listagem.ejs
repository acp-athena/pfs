<script>
    document.addEventListener('DOMContentLoaded', function() {
    })
</script>

<h1>Usuários cadastrados</h1>
<a class="btn btn-secondary" href="usuarios/cadastrar">Novo Usuário</a>

<hr>
    <div>
        <h1>Tabela construida via EJS</h1>
        <table class="table table-striped">
            <thead>
                <th>Id</th>
                <th>Email</th>
                <th>Nome</th>
                <th>Perfil</th>
                <th>Ativo</th>
                <th>Ações</th>
            </thead>
            <tbody>
                <% for (let i = 0; i < lista.length; i++)  { %>
                    <tr>
                        <td><%= lista[i].usuarioId %></td>
                        <td><%= lista[i].usuarioEmail %></td>
                        <td><%= lista[i].usuarioNome %></td>
                        <td><%= lista[i].perfilId %></td>
                        <td><%= lista[i].usuarioAtivo %></td>
                        <td>
                            <a href="/usuarios/alterar/<%= lista[i].usuarioId %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                            <button onclick="deletar('<%= lista[i].usuarioId %>')" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

<script src="/js/usuarios/listagem.js"></script>